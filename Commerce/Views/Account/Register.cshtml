@model Commerce.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<section class="section">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "registerForm", @class = "card", role = "form" }))
    {
        <div class="card-header">
            <p class="card-header-title">
                Register a Commerce account
            </p>
            <a href="#" class="card-header-icon" aria-label="more options">
                <span class="icon">
                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                </span>
            </a>
        </div>
        <div class="card-content">
            @Html.AntiForgeryToken()

            <div class="field">
                @Html.LabelFor(m => m.Email, new { @class = "label" })
                <div class="control">
                    @Html.TextBoxFor(m => m.Email, new { @class = "input" })
                </div>
            </div>
            <div class="field">
                @Html.LabelFor(m => m.Password, new { @class = "label" })
                <div class="control">
                    @Html.PasswordFor(m => m.Password, new { @class = "input" })
                </div>
            </div>
            <div class="field">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "label" })
                <div class="control">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input" })
                </div>
            </div>
            @Html.ValidationSummary("", new { @class = "help is-danger" })
        </div>
        <div class="card-footer">
            <a type="submit" href="javascript:document.getElementById('registerFormHiddenSubmit').click()" class="card-footer-button is-info">
                Submit
            </a>
        </div>
        <input id="registerFormHiddenSubmit" type="submit" class="is-hidden" />
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
